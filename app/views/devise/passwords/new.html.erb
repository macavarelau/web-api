<div class="w-full max-w-md mx-auto">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-8 py-6">
      <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">¿Olvidaste tu contraseña?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-gray-800 focus:border-gray-800" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Enviar instrucciones",
              class: "w-full py-2 px-4 border border-gray-800 text-gray-800 text-center font-medium rounded-md hover:bg-gray-800 hover:text-white transition-colors duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 border-t border-gray-200 pt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
