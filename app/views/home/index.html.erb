<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <h1 class="text-3xl font-bold mb-8 text-center">Bienvenido</h1>
            
            <% if user_signed_in? %>
              <div class="space-y-6">
                <p class="text-gray-600 text-center">Has iniciado sesión como <span class="font-medium text-gray-800"><%= current_user.email %></span></p>
                
                <div class="flex flex-col space-y-4">
                  <%= link_to "Ver Tasas", rates_path, 
                      class: "w-full py-2 px-4 border border-gray-800 text-gray-800 text-center font-medium rounded-md hover:bg-gray-800 hover:text-white transition-colors duration-200" %>
                  
                  <%= button_to "Cerrar Sesión", destroy_user_session_path, 
                      method: :delete, 
                      class: "w-full py-2 px-4 border border-gray-400 text-gray-600 text-center font-medium rounded-md hover:bg-gray-100 transition-colors duration-200" %>
                </div>
              </div>
            <% else %>
              <div class="flex flex-col space-y-4">
                <%= link_to "Iniciar Sesión", new_user_session_path, 
                    class: "w-full py-2 px-4 border border-gray-800 text-gray-800 text-center font-medium rounded-md hover:bg-gray-800 hover:text-white transition-colors duration-200" %>
                
                <%= link_to "Registrarse", new_user_registration_path, 
                    class: "w-full py-2 px-4 border border-gray-400 text-gray-600 text-center font-medium rounded-md hover:bg-gray-100 transition-colors duration-200" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
