<div class="w-full max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-semibold text-gray-800">Tasas</h1>
    <%= link_to "Volver", root_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>

  <% if flash[:error] %>
    <div class="mb-8 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:error] %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <iframe 
      src="https://docs.google.com/spreadsheets/d/1a9AGbLaKjKJV3nqVp58rWCdCr2KsEojw5gU0FTfB5ZU/edit?usp=sharing"
      style="width: 100%; height: 600px; border: none;"
      frameborder="0"
    ></iframe>
  </div>
</div>
